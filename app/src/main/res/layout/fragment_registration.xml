                custom:textToggleRight="SIGN IN"
                custom:toggleWidth="100dp"
                custom:activeBgColor="@color/colorPrimary"
                custom:inactiveTextColor="#fff"
                custom:inactiveBgColor="#7db3d2"
                custom:separatorColor="#eee"
                />


