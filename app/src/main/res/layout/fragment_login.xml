<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/main_app_bg"
    tools:context="com.adim.techease.fragments.LoginFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/ivBackArrowSignIn"
            android:layout_marginBottom="10sp"
            android:src="@drawable/backbtnarrow"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        tools:context="com.adim.techease.fragments.LoginFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.adim.techease.fragments.LoginFragment">

            <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/toglebtnLoginFrag"
                android:layout_gravity="center"
                android:textSize="17sp"
                custom:textToggleLeft="SIGN UP"
                custom:textToggleRight="SIGN IN"
                custom:toggleWidth="100dp"
                custom:activeBgColor="#7db3d2"
                custom:inactiveTextColor="#fff"
                custom:inactiveBgColor="@color/colorDark"
                custom:separatorColor="#eee"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/edittext_back"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/login_username_icon" />

                <EditText
                    android:id="@+id/et_email_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Email"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                  />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center_horizontal"
                android:background="@drawable/edittext_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/login_password_icon" />

                <EditText
                    android:id="@+id/et_password_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"
                    android:hint="Password"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:paddingRight="30dp"
            android:text="Forget Password?"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#7db3d2"
            android:text="Sign In"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_register_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Don't have an account? Sign Up"
            android:textColor="#fff" />

    </TableLayout>
    </LinearLayout>
</ScrollView>
